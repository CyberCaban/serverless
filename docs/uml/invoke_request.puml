@startuml
actor User as u
participant Server as main
participant FunctionManager as fm
participant ContainerManager as cm
participant redis

group Invoke request
  u -> main : invoke request
  activate main
    main -> fm : create container\nstart container\nselect suitable container\n(implement load balancer)\n
    activate fm
      fm -> cm : exec in a container
      activate cm
        alt Successful invokation
          cm -> fm : return data
        else Invokation failed
          cm -> fm : return error
        end
      deactivate cm
      fm -> main : return invokation result
    deactivate fm
    main -> u : return response
  deactivate main
end
@enduml
